<% provide(:title, "Front Page") %>
<p class="lead">Latest Posts</p>
<div class="row">
  <div class="col-md-8 col-md">
    <% @links.each do |link| %>
      <li>
        <% unless link.already_liked_by?(current_user) %>
          <%= link_to upvotes_path(link), method: :post do %>
            <span class="glyphicon glyphicon-arrow-up"></span>
          <% end %>
        <% end %> |
        <%= link_to link_path(link) do %>
          <span class="glyphicon glyphicon-comment"></span>
        <% end %>
        <%= link_to "#{link.title}", link.url, target: :_blank %>
        <em>
          (<%= time_ago_in_words(link.created_at) %> ago)
        </em> - <%= pluralize(link.upvotes.count, "upvote") %>
        by <%= link_to "#{link.user.username}", user_path(link.user) %>
      </li>
    <% end %>
  </div>
  <div class="col-md-4 col-md">
    <div id="coindesk-widget" data-size="mpu"></div>
    <script type="text/javascript" src="//widget.coindesk.com/bpiticker/coindesk-widget.min.js"></script>
  </div>
</div>
