<header class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to "#{$SITE_TITLE}", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "About", "#" %></li>
        <li><%= link_to "Ask HM", "#" %></li>
        <% if logged_in? %>
         <li class="dropdown">
           <a href="#" class="dropdown-toggle" data-toggle="dropdown">
             <%= current_user.username %> <em>(<%= pluralize(current_user.points, "point") %>)</em> <b class="caret"></b>
           </a>
           <ul class="dropdown-menu">
             <li><%= link_to "Profile", user_path(current_user) %></li>
             <li><%= link_to "Settings", edit_user_path(current_user) %></li>
             <li><%= link_to "My Mailbox (#{current_user.mailbox.inbox.unread(current_user).count})", conversations_path(current_user) %></li>
             <li class="divider"></li>
             <li>
               <%= link_to "Log out", signout_path, method: :delete %>
             </li>
           </ul>
         </li>
        <% else %>
          <li><%= link_to "Sign in", signin_path %></li>
        <% end %>
        <li><%= link_to "Submit", new_link_path(@link) %></li>
      </ul>
    </nav>
  </div>
</header>
