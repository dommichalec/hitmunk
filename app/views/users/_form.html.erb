<div class="row">
  <div class="col-md-4 col-md">
    <h1><%= @user.username %></h1>
    <%= form_for @user, validate: true do |f| %>
      <%= render 'shared/error_messages', object: f.object %> <!--f.object is @link -->

      <%= f.label :email %>
      <%= f.email_field :email, required: true, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <!-- @user.new.new_record? == true will issue a POST request -->
      <% if @user.new_record? %>
        <%= f.submit "Sign up", class: "btn btn-primary",
                                 method: :post %>
      <% else %>
      <%= f.submit "Edit your settings", class: "btn btn-primary",
                               method: :patch %>
      <% end %>
    <% end %>
  </div>
</div>
